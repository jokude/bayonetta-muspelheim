{
  "name": "bayonetta-muspelheim",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint:js": "eslint src/js",
    "lint:css": "sass-lint style.scss --verbose --no-exit",
    "lint": "lint:js && lint:css",
    "build:css": "sass src/scss/style.scss build/style.css | npx postcss build/*.css --use autoprefixer -d build",
    "build:js": "babel src/js > build/script.js",
    "build:html": "html-minifier --collapse-whitespace src/index.html > build/index.html",
    "build:assets": "cp -rf src/assets/ build/assets/",
    "build": "rm -rf build && mkdir build && npm-run-all --parallel build:*",
    "start:build": "http-server build",
    "start": "npm run build && npm run start:build"
  },
  "author": "Richard Hidalgo",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.1.5",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "html-minifier": "^3.5.20",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "prettier-eslint": "^8.8.2",
    "sass": "^1.14.0",
    "sass-lint": "^1.12.1"
  }
}
